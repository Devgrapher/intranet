{% extends 'ridi.twig' %}

{% block head %}
{% endblock %}

{% block body %}
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-8">
        {% for index, post in posts %}
          <div class="panel panel-default">
            <div class="panel-heading">

              <a href="/posts/{{ group }}/{{ post.id }}">
                {{ lastItem + posts.length - index }} -
                {{ post.title }}
              </a>

              {% if post.is_new %}
                <span class="label label-success">NEW</span>
              {% endif %}
              {% if not post.is_sent %}
                <span class="label label-info">미발송</span>
              {% endif %}
              <span class="label label-info">{{ post.name }}</span>
            </div>

          </div>
        {% endfor %}
      </div>
    </div>
    <div class="row">
      {% if isSuperAdmin %}
        <div class="col-xs-7">
          <a href="/posts/{{ group }}/sendAll">
            <button class="btn btn-primary" type="button">
              모두 발송하기
            </button>
          </a>
        </div>

        <div class="col-xs-1">
          <a href="/posts/{{ group }}/write">
            <button class="btn btn-primary" type="button">
              글쓰기
            </button>
          </a>
        </div>
      {% endif %}
    </div>
  </div>

{% endblock %}
