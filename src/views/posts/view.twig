{% extends 'ridi.twig' %}

{% block head %}
{% endblock %}

{% block body %}
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-8">
        <div class="panel panel-default">
          <div class="panel-heading">
            {{ title }}
            {% if not is_sent %}
              <span class="label label-info">미발송</span>
            {% endif %}
            <span class="label label-info">{{ name }}</span>
          </div>
          <div class="panel-body">
            {{ content_html | raw }}
          </div>
        </div>
      </div>
    </div>
      <div class="row">
        <div class="col-xs-7">
          <a href="/posts/{{ group }}">
            <button class="btn" type="button">
              목록으로
            </button>
          </a>
        </div>

        <div class="col-xs-1">
          {% if isSuperAdmin %}
            <a href="/posts/{{ group }}/{{ id }}/modify">
              <button class="btn btn-primary" type="button">
                수정하기
              </button>
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>

{% endblock %}
