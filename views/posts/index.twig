{% extends 'ridi.twig' %}

{% block head %}
  <style>
    tbody td {
      text-align: left;
    }
  </style>
{% endblock %}

{% block body %}
  <div class="container-fluid">
    <table class="table">
      <colgroup>
        <col width="20">
        <col width="*">
        <col width="80">
      </colgroup>
      <tbody>
      {% for index, post in posts %}
        <tr>
          <td>
            {{ lastItem + posts.length - index }}
          </td>
          <td>
            <a href="/posts/{{ group }}/{{ post.id }}">
              {{ post.title }}
            </a>
            {% if post.is_new %}
              <span class="label label-success">NEW</span>
            {% endif %}
          </td>
          <td>
            {{ post.updated_at|date('Y-m-d') }}
          </td>
        </tr>
      {% endfor %}
      </tbody>
    </table>

    <div class="row">
      {% if isPostAdmin %}
        <div class="col-xs-1">
          <a href="/posts/{{ group }}/write">
            <button class="btn btn-primary" type="button">
              글쓰기
            </button>
          </a>
        </div>
      {% endif %}
    </div>
  </div>

{% endblock %}
